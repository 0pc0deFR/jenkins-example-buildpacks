pipeline {
  agent any
  stages {
    stage('information') {
      steps {
        sh 'pack version'
        sh 'pack report'
        sh 'env | sort'
      }
    }
    stage('build') {
      steps {
        sh 'pack build darinpope/spring-boot-hello-world --path . --builder gcr.io/buildpacks/builder:v1'
      }
    }
  }
}