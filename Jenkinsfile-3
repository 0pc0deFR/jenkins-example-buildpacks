pipeline {
  agent any
  environment {
    DH_CREDS=credentials('dh-creds')
  }
  stages {
    stage('information') {
      steps {
        sh 'pack version'
        sh 'pack report'
        sh 'env | sort'
      }
    }
    stage('login') {
      steps {
        sh 'echo $DH_CREDS_PSW | docker login registry.linufy.fr --username=$DH_CREDS_USR --password-stdin'
      }
    }
    stage('build') {
      steps {
        sh 'pack build docker.io/darinpope/spring-boot-hello-world:${GIT_COMMIT:0:7} --path . --builder gcr.io/buildpacks/builder:v1 --publish'
      }
    }
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}
